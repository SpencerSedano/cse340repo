<h1>Edit Vehicle</h1>
<%- messages() %>
<form action="/inv/delete" method="post" id="deleteForm">
  <input type="hidden" name="inv_id" value="<%= inv_id %>" />

  <fieldset>
    <label for="classification_id">Classification:</label>
    <%- classificationList %>
  </fieldset>

  <label for="inv_make">Make:</label>
  <input
    type="text"
    id="inv_make"
    name="inv_make"
    value="<%= inv_make %>"
    readonly
  />

  <label for="inv_model">Model:</label>
  <input
    type="text"
    id="inv_model"
    name="inv_model"
    value="<%= inv_model %>"
    readonly
  />

  <label for="inv_year">Year:</label>
  <input
    type="number"
    id="inv_year"
    name="inv_year"
    value="<%= inv_year %>"
    readonly
  />

  <label for="inv_price">Price:</label>
  <input
    type="number"
    id="inv_price"
    name="inv_price"
    value="<%= inv_price %>"
    readonly
  />

  <label for="inv_description">Description:</label>
  <textarea id="inv_description" name="inv_description" readonly>
<%= inv_description %></textarea
  >

  <label for="inv_image">Image Path:</label>
  <input
    type="text"
    id="inv_image"
    name="inv_image"
    value="<%= inv_image %>"
    readonly
  />

  <label for="inv_thumbnail">Thumbnail Path:</label>
  <input
    type="text"
    id="inv_thumbnail"
    name="inv_thumbnail"
    value="<%= inv_thumbnail %>"
    readonly
  />

  <label for="inv_miles">Miles:</label>
  <input
    type="number"
    id="inv_miles"
    name="inv_miles"
    value="<%= inv_miles %>"
    readonly
  />

  <label for="inv_color">Color:</label>
  <input
    type="text"
    id="inv_color"
    name="inv_color"
    value="<%= inv_color %>"
    readonly
  />

  <button type="submit" disabled>Update Vehicle</button>
</form>
<script src="/js/inv-delete.js"></script>
